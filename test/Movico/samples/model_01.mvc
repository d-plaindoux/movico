model string {
    toDom : dom
}

type Peano {
    model Zero
    model Succ { _ : Peano }
}

class peano this:Peano {
    unbox : Peano
    (+) : peano -> peano
    fold : [a] (unit -> a) -> (peano -> a) -> a
} {
    def unbox = this
    
    def Zero.(+) p = self
    def Succ.(+) p = 
        let p = self this._ + p in
            self $ Succ $ p unbox

    def Zero.fold z _ = z ()
    def Succ.fold _ s = s $ self this._
}

view zero this:unit {
    "Zero".toDom
}

view succ this:peano {
    ("SUCC".toDom) (this fold zero succ)
}
