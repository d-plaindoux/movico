// Simple example with a model and a view 

model xml

model string {
    xml : xml
}

model number {
    string : string
}

model Todo {
    date  : number
    value : string
}

class TodoClass this:Todo {
    (@)    : Todo -> TodoClass
    date   : number
    what   : string     
    change : number -> string -> TodoClass    
} {
    def (@) t = TodoClass t
    def date = this.date
    def what = this.value
    def change d w = self@(Todo d  w)
}

view TodoView this:TodoClass {
    <div> 
        <div class="todo" when=this.date.string> this.what.xml </div>
    </div>
}
 