type List[a] {
    model Nil
    model Cons {
        head : a
        tail : List[a]
    }
}

class ListClass[a] this:List[a] {
    (++)    : List[a] -> List[a]
    map     : [b] (a -> b) -> List[b]
    flatmap : [b] (a -> List[b]) -> List[b]
} {
    def Nil[a].(++) l = l    
    def Nil[a].map f = Nil
    def Nil[a].flatmap f = Nil

    def Cons[a].(++) l = Cons this.head ((self this.tail) ++ l)
    def Cons[a].map f = Cons (f this.head) ((self this.tail).map f)
    def Cons[a].flatmap f = 
        let head = ListClass (f this.head) in
        let tail = (self this.tail).flatmap f in
            head ++ tail
}
