module Example.Factorial
 
from Data.Number import number
from Data.Array import emptyarray
from Core.Lang.When import when
 
def fact_tail : number -> number -> number = 
    acc n ->
        when (n == 0) 
        then acc
        else { fact_tail (n * acc) (n - 1) }
    
def fact : number -> number = 
    n -> fact_tail 1 n
