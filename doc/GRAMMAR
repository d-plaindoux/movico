----------------------------------------------------------------------
 Movico grammar definition   
----------------------------------------------------------------------
 V2                                                         12/1/2014               
----------------------------------------------------------------------

entity  ::= objectDef | typeDef | classDef | viewDef

----------------------------------------------------------------------

objectDef ::= "object" IDENT "{" param* "}"
param     ::= IDENT ":" type

type      ::= IDENT | "(" types ")" | "[" type "]"
types     ::= type ("," type)*

----------------------------------------------------------------------

typeDef   ::= "type" IDENT = IDENT ("|" IDENT)+

----------------------------------------------------------------------

classDef  ::= "class" IDENT param "{" methods "}"

methods   ::= (("case" IDENT)? method)*

method    ::= IDENT "=" expr
            | IDENT "(" ")" "=" expr
            | IDENT param+ "=" expr

exprs     ::= pexpr+

expr      ::= expr ("," iexpr)*

iexpr     ::= sexpr ("." IDENT)*

sexpr     ::= NUMBER 
            | STRING
            | IDENT
            | "(" exprs ")"
            | "<" IDENT attr* ">" exprs "</" IDENT ">" 
            | "<" IDENT attr* "/>"
            | "[" exprs ("for" IDENT "in" exprs)+ ("if" exprs)? "]"
            | IDENT "{" expr* "}"
            ] "let" IDENT "=" expr "in" expr
            
attr      ::= IDENT "=" expr

----------------------------------------------------------------------

viewDef   ::= "view" IDENT param "{" exprs "}"

----------------------------------------------------------------------
