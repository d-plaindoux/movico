----------------------------------------------------------------------
 Movico grammar definition   
----------------------------------------------------------------------
 V2                                                         12/1/2014               
----------------------------------------------------------------------

entity  ::= objectDef | typeDef | classDef | viewDef

----------------------------------------------------------------------

objectDef ::= "model" IDENT TIDENT* "{" param* "}"
param     ::= IDENT ":" type

type      ::= IDENT 
            | TIDENT 
            | "(" ftype ")" 
            | "[" type "]"
            
ftype     ::= types (ftype)*

types     ::= type "," types
            | type "->" types
            | type

----------------------------------------------------------------------

classDef  ::= "class" TIDENT* IDENT param "{" method* "}"

method    ::= "def" IDENT "=" expr
            | "def" IDENT "(" ")" "=" expr
            | "def" IDENT TIDENT* param+ "=" expr

exprs     ::= pexpr+

expr      ::= iexpr ("," iexpr)*

iexpr     ::= sexpr ("." IDENT)*

sexpr     ::= NUMBER 
            | STRING
            | IDENT
            | "(" exprs ")"
            | "<" IDENT attr* ">" exprs "</" IDENT? ">" 
            | "<" IDENT attr* "/>"
            | "[" exprs ("for" IDENT "in" exprs)+ ("if" exprs)? "]"
            | IDENT "{" expr* "}"
            | "let" IDENT ("(" ")"| TIDENT* param+)? "=" exprs "in" exprs
            | "fun" "(" ")"| TIDENT* param+ => exprs
            
attr      ::= IDENT "=" expr

----------------------------------------------------------------------

viewDef   ::= "view" IDENT param "{" exprs "}"

----------------------------------------------------------------------