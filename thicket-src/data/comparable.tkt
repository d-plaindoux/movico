module Data.Comparable
 
from Data.Hashable import Hashable
from Data.Boolean import bool

model Comparable[k] {
    unbox : k
    (==) : k -> bool 
    (!=) : k -> bool
    (>>) : k -> bool
    (<<) : k -> bool    
    hashable : Hashable[k]
}

def adapter comparable2hashable : [a] Comparable[a] -> Hashable[a] = c -> {
    c hashable
}
